    "CORS_ORIGIN": {
      "description": "CORS origin for admin portal",
      "value": "https://your-admin-portal.vercel.app"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
