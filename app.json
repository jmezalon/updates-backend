{
  "name": "Updates Backend",
  "description": "Backend API for Church Updates App",
  "repository": "https://github.com/jmezalon/updates-backend",
  "logo": "",
  "keywords": ["node", "express", "sqlite", "church", "api"],
  "image": "heroku/nodejs",
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "JWT_SECRET": {
      "description": "JWT secret key for authentication",
